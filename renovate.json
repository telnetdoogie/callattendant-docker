{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    "helpers:pinGitHubActionDigests"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/Dockerfile$/"
      ],
      "matchStrings": [
        "RUN pip install --no-cache-dir --prefix=/install callattendant@git\\+https://github.com/thess/callattendant@(?<currentValue>v?[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "thess/callattendant"
    }
  ],
  "packageRules": [
    {
      "matchDepNames": ["thess/callattendant"],
      "matchDatasources": ["github-releases"],
      "commitMessagePrefix": "feat:",
      "automerge": false,
      "groupName": null
    },
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "groupName": "CI Dependencies"
    },
    {
      "groupName": "CI Dependencies",
      "matchUpdateTypes": ["patch", "digest"],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
